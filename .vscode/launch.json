    "version": "0.2.0",
    "configurations": [
        {
            "type": "rdbg",
            "name": "Debug rspec",
            "request": "launch",
            "command": "rspec",
            "script": "${file}:${lineNumber}",
            "askParameters": true
        },
        {
            "type": "rdbg",
            "name": "Debug rails server",
            "request": "launch",
            "command": "bin/rails",
            "script": "server",
            "args": [],
            "askParameters": true
        },
        {
            "type": "rdbg",
            "name": "Attach with rdbg",
            "request": "attach",
            "debugPort": "12345"
        }
    ]
}